{% extends 'RPGSRDBundle:Templates:base.html.twig' %}

{% block body %}

<div class="dw-box">
    <table class="dw-table">
        <tr>
            <td><span class="name">{{ variables.name }}</span></td>
            <td class="tags" colspan='2'>{% for tag in variables.tags %} 
                                            {{tag}}, 
                                         {% endfor %}
            </td>
        </tr>        
        <tr>            
            <td class="dw-uses" colspan='2'>
                <span><strong>{{ variables.uses }} uses </strong></span>
            </td>
            <td class="dw-armor">{{ variables.armor }}</td>
        </tr>                
    </table>
    <p class="description">{{ variables.description }}</p>
    <ul>{% for move in variables.moves %}
        <li>{{ move }}</li> 
        {% endfor %}
    </ul>
</div>

{% endblock %}