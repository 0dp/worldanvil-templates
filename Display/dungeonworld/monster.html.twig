{% extends 'RPGSRDBundle:Templates:base.html.twig' %}

{% block body %}

<div class="monster-box">
    <table class="monster-table">
        <tr>
            <td><span class="name">{{ variables.name }}</span></td>
            <td class="tags" colspan='2'>{% for tag in variables.tags %} 
                                            {{tag}} 
                                         {% endfor %}
            </td>
        </tr>        
        <tr>
            <td class="monster-damage">{{ variables.damage }}</td>
            <td class="monster-hp">{{ variables.hp }}</td>
            <td class="monster-armor">{{ variables.armor }}</td>
        </tr>        
        <tr>
            <td class="damage-tags" colspan='3'>{% for damage_tag in variables.damage_tags %} 
                                {{damage_tag}} 
                            {% endfor %}</td>
        </tr>
        <tr>
            {% if variables.special_qualities %}
                <td colspan='3' class="special-qualities">
                    <strong>Special Qualities:</strong> {% for quality in variables.special_qualities %} 
                                                            {{quality}} 
                                                        {% endfor %}</td>
            {% endif %}
        </tr>
    </table>
    <p class="description">{{ variables.description }} <em>Instinct</em>: {{ variables.instinct}}</p>
    <ul>{% for move in variables.moves %}
        <li>{{ move }}</li> 
        {% endfor %}
    </ul>
</div>

{% endblock %}